extends layout

block content
	h1=title

	form(method='POST' action='')
		div.form-group
			label(for='first_name') First name:
			input#first-name.form-control(type='text' placeholder='Shadman' name='first_name' value=(author ? author.first_name : ''))
			label(for='family_name') Family name:
			input#family-name.form-control(type='text' placeholder='Soumik' name='family_name' value=(author ? author.family_name : ''))
		div.form-group
			label(for='date_of_birth') Date of birth:
			input#date_of_birth.form-control(type='date' name='date_of_birth' value=(author ? author.date_of_birth_yyyy_mm_dd : ''))
			label(for='date_of_death') Date of death:
			input#date_of_death.form-control(type='date' name='date_of_death' value=(author ? author.date_of_death_yyyy_mm_dd : ''))
		button.btn.btn-primary(type='submit') Submit
	if errors
		ul
			for error in errors
				li!= error.msg
